// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "breadcrumb.background": "#00000011",
        "editorCursor.background": "#000000",
        "editorCursor.foreground": "#ff5d57",
        "editorGroup.border": "#000000",
        "list.focusBackground": "#ff000077",
        "minimap.background": "#00000022",
        "minimapSlider.activeBackground": "#00000077",
        "minimapSlider.background": "#00000077",
        "notebook.cellHoverBackground": "#0090F111",
        "notebook.focusedCellBackground": "#0090F144",
        "panel.border": "#000000",
        "sideBar.border": "#000000",
        "tab.activeBackground": "#ff000077",
        "terminal.findMatchHighlightBackground": "#ffff0055",
        "titleBar.activeBackground": "#000000aa",
        "titleBar.activeForeground": "#ffffff"
    },
    "easy-highlight.highlightColor": "#ff000055",
    "excalidraw.theme": "light",
    "markdown-preview-github-styles.colorTheme": "dark",
    "workbench.colorTheme": "Ra Summer",
    "workbench.iconTheme": "mizu"
}