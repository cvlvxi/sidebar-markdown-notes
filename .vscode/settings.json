// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "sideBar.border": "#000000",
        "editor.lineHighlightBackground": "#000000AA",
        "editorCursor.background": "#000000",
        "editorCursor.foreground": "#ff5d57",
        "editorGroup.border": "#ff0000",
        "focusBorder": "#ffff00",
        "list.focusBackground": "#ffdb2933",
        "minimap.background": "#00000011",
        "minimapSlider.background": "#0090F144",
        "notebook.cellHoverBackground": "#0090F111",
        "notebook.focusedCellBackground": "#0090F144",
        "panel.border": "#000000",
        "panelTitle.activeForeground": "#ff0000",
        "panelTitle.inactiveForeground": "#ffffff",
        "scrollbarSlider.background": "#ff0000",
        "statusBar.background": "#e0c2fc",
        "statusBar.foreground": "#000000",
        "tab.activeBackground": "#0090F144",
        "tab.activeBorder": "#e0c2fc",
        "terminal.findMatchHighlightBackground": "#ffff0055",
        "titleBar.activeBackground": "#e0c2fc",
        "titleBar.activeForeground": "#000000",
        "titleBar.inactiveBackground": "#e0c2fc",
        "titleBar.inactiveForeground": "#000000",
        "titleBar.border": "#e0c2fc",
        "activityBar.background": "#e0c2fc",
        "activityBar.foreground": "#000000",
        "statusBar.debuggingBackground": "#e0c2fc",
        "statusBar.debuggingForeground": "#000000",
        "iLoveWorkSpaceColors": true,
        "iLoveWorkSpaceRandom": false
    },
    "easy-highlight.highlightColor": "#ff000055",
    "excalidraw.theme": "dark",
    "markdown-preview-github-styles.colorTheme": "dark",
    "workbench.colorTheme": "Dark+ Tailwind",
    "workbench.iconTheme": "gruvbox-icon-theme"
}